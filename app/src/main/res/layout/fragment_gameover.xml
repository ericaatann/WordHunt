<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_over_background">

    <ImageView
        android:id="@+id/gameOverImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/game_over_image" />

    <TextView
        android:id="@+id/gameOverTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameOverImage"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Game Over!"
        android:textColor="@android:color/white"
        android:textSize="36sp" />

    <Button
        android:id="@+id/retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameOverTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Retry"
        android:textSize="18sp"
        android:background="@drawable/button_background" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Menu"
        android:textSize="18sp"
        android:background="@drawable/button_background" />


</RelativeLayout>
